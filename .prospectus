require 'yaml'

lines = File.readlines('Puppetfile').select { |x| x.match(/^hmod /) }
modules = lines.map { |x| x.split("'").values_at(1, 3) }

modules.each do |name, version|
  repo_name = "halyard/puppet-#{name}"

  item do
    name "halyard::#{name}"

    expected do
      github_tag
      repo repo_name
      regex /^([\d.]+)$/
      filter /^([\d.]+)$/
    end

    actual do
      static
      set version
    end
  end
end

item do
  name 'halyard::gems'

  expected do
    static
    set 'green'
  end

  actual do
    gemnasium
    slug 'halyard/halyard'
  end
end
